@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Photo</label>
            <input type="file" multiple class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos">@ViewBag.error</span>
            
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Description</label>
            <input class="form-control" id="category-text" asp-for="Description"></input>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
         
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" />  @*step=".01"---input type decimal olsun*@
            <span class="text-danger" asp-validation-for="Price">@ViewBag.error</span>
            
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Sale</label>
            <input class="form-control" id="customFile" asp-for="Sale" />
            <span class="text-danger" asp-validation-for="Sale">@ViewBag.error</span>
       
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Owner</label>
            <select class="form-control" id="customFile" asp-for="CourseHostId" asp-items="@ViewBag.owners"></select>  @*asp-items-value ve text mentiqinde isleyir.select tagin valusu=asp-for(id mentiqene gore isleyir);select tagin texti=icindeki checkbox  data-name*@
        </div>
   

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>

