@model CourseEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="product-images d-flex ">
        @foreach (var item in Model.Images)
        {
                <div class="trash-icon" data-id="@item.Id">
                    <img src="~/images/@item.Name" style="width:150px;height:150px;" />
                     <i  style="font-size:22px;color:red;cursor:pointer;" class="fa-solid fa-trash-can"></i>
                </div>

        }

    </div>
     <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="my-2">Name</label>
            <input class="form-control " id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Description</label>
            <textarea class="form-control" id="description-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    <div class="form-group">
            <label class="my-2">Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Sales</label>
            <input class="form-control" id="customFile" asp-for="Sale" />
            <span class="text-danger" asp-validation-for="Sale"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Owner</label>
            <select class="form-control" id="customFile" asp-for="CourseHostId" asp-items="@ViewBag.owners"></select>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label my-2">Add Photo</label>
            <input type="file" multiple class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos">@ViewBag.error</span>

        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>





