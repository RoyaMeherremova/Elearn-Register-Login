                                    <div class="featured_author_image"><img src="~/images/featured_author.jpg" alt=""></div>
                                    <div class="featured_author_name">By <a href="#">@Model.Courses.FirstOrDefault().CourseHost.FullName</a></div>
                                    <div class="featured_sales ml-auto"><span>@Model.Courses.FirstOrDefault().Sale</span></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 featured_col">

                            <div class="featured_background" style="background-image:url(images/@Model.Courses.FirstOrDefault().Images.FirstOrDefault().Name"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="courses">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
