@model HomeVM
@{
    ViewData["Title"] = "Home";

}

<div class="home">
    <div class="home_slider_container">

        <div class="owl-carousel owl-theme home_slider">

          

                @foreach(var slider in Model.Slider)
                {
                <div class="owl-item">
                    <div class="home_slider_background" style="background-image:url(images/@slider.Image"></div>
                    <div class="home_container">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                  
                                    
                                        <div class="home_content text-center">
                                            <div class="home_logo"><img src="~/images/@slider.Logo" alt=""></div>
                                            <div class="home_text">
                                                <div class="home_title">@slider.Header</div>
                                                <div class="home_subtitle">@slider.Description</div>
                                            </div>
